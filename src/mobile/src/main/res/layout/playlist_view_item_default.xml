<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginBottom="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="0dp"
    tools:layout_height="136dp"
    tools:layout_width="136dp"
    >

    <FrameLayout
        android:id="@+id/active_indicator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/playlist_view_item_bg"
            >

            <com.ilusons.harmony.ref.ui.ParallaxImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:elevation="9dp"
                android:scaleType="centerCrop"
                android:transitionName="action_image"
                android:translationZ="0dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:translationZ="30dp"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/translucent_dark"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="6dp"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    tools:text="Text ..."
                    />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:background="@color/translucent_dark"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/primary_text"
                    android:textSize="10sp"
                    tools:text="Text ..."
                    />

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
