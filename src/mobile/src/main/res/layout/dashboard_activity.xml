                app:tabBackground="@null"
                app:tabGravity="fill"
                app:tabMode="fixed"/>

        </android.support.design.widget.AppBarLayout>
        -->

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/dashboard_drawer_left"/>

</android.support.v4.widget.DrawerLayout>
