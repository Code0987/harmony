<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:descendantFocusability="beforeDescendants"
        android:fadeScrollbars="false"
        android:focusableInTouchMode="true"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        android:paddingBottom="128dp"
        android:paddingTop="64dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbars="none"
        android:tag="Charts"
        res:layout_constraintBottom_toBottomOf="parent"
        res:layout_constraintLeft_toLeftOf="parent"
        res:layout_constraintRight_toRightOf="parent"
        res:layout_constraintTop_toTopOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/image_0"
                android:layout_width="0dp"
                android:layout_height="196dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintTop_toBottomOf="@id/image_0"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toRightOf="@id/image_1"
                res:layout_constraintTop_toBottomOf="@id/image_0"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toRightOf="@id/image_2"
                res:layout_constraintTop_toBottomOf="@id/image_0"/>

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toRightOf="@id/image_1"
                res:layout_constraintTop_toBottomOf="@id/image_2"/>

            <ImageView
                android:id="@+id/image_5"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                res:layout_constraintLeft_toRightOf="@id/image_4"
                res:layout_constraintTop_toBottomOf="@id/image_3"/>

            <ImageView
                android:id="@+id/analytics_charts_status"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="16dp"
                android:alpha="0.63"
                android:scaleType="fitXY"
                android:src="@drawable/ic_analytics"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toTopOf="parent"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/analytics_charts_c1"
                android:layout_width="0dp"
                android:layout_height="305dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/image_1"
                />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:visibility="visible"
        res:indicatorColor="@android:color/holo_purple"
        res:indicatorName="BallScaleMultipleIndicator"
        res:layout_constraintBottom_toBottomOf="parent"
        res:layout_constraintLeft_toLeftOf="parent"
        res:layout_constraintRight_toRightOf="parent"
        res:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
