<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/primary_dark"
    android:minHeight="128dp">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Notification.Title.Media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:textColor="@color/primary_text"
                tools:text="Title"/>

            <TextView
                android:id="@+id/album"
                style="@style/TextAppearance.AppCompat.Notification.Line2.Media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:textColor="@color/primary_text"
                tools:text="Album"/>

            <TextView
                android:id="@+id/artist"
                style="@style/TextAppearance.AppCompat.Notification.Info.Media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:textColor="@color/primary_text"
                tools:text="Artist"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/stop"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:scaleType="centerInside"
                    android:singleLine="true"
                    android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/prev"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:scaleType="centerInside"
                    android:singleLine="true"
                    android:drawableStart="@android:drawable/ic_media_previous"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/play_pause"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:scaleType="centerInside"
                    android:singleLine="true"
                    android:drawableStart="@android:drawable/ic_media_play"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/next"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:scaleType="centerInside"
                    android:singleLine="true"
                    android:drawableStart="@android:drawable/ic_media_next"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/random"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:paddingStart="8dp"
                    android:scaleType="centerInside"
                    android:singleLine="true"
                    android:drawableStart="@android:drawable/ic_media_ff"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="-4dp"
                android:indeterminate="true"
                android:max="100"
                android:progress="100"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>