<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="0dp"
    app:elevation="0dp"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="0dp"
        app:elevation="0dp"
        app:expanded="false"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_top_down"
            android:elevation="0dp"
            app:elevation="0dp"
            app:layout_collapseMode="pin"
            >

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loadingView"
                style="@style/AVLoadingIndicatorView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:indicatorColor="@color/primary_light"
                app:indicatorName="LineScalePulseOutRapidIndicator"
                app:layout_collapseMode="parallax"
                />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_primary_dark"
        android:clipChildren="false"
        android:clipToPadding="false">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="48dp">

            <ImageView
                android:id="@+id/cover"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="100%"
                app:layout_widthPercent="100%"
                />

        </android.support.percent.PercentRelativeLayout>

        <FrameLayout
            android:id="@+id/lyrics_container"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/upperLayout"
            android:background="@drawable/gradient_bottom_up"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layout_anchor="@id/cover"
        app:layout_anchorGravity="bottom|right|end">

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:layout_collapseMode="parallax"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_gesture_black_24dp"
            android:tint="@color/primary_text"
            android:tintMode="src_in"
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
