<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    app:elevation="0dp"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:expanded="false"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_top_down"
            android:elevation="0dp"
            app:elevation="0dp"
            app:layout_collapseMode="pin"
            >

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/loadingView"
                style="@style/AVLoadingIndicatorView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:indicatorColor="@color/primary_light"
                app:indicatorName="LineScalePulseOutRapidIndicator"
                app:layout_collapseMode="parallax"
                />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_primary_dark"
        android:clipChildren="false"
        android:clipToPadding="false"
        >

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/coverLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            >

            <ImageView
                android:id="@+id/cover"
                android:scaleType="fitXY"
                android:src="@drawable/logo"
                app:layout_aspectRatio="100%"
                app:layout_widthPercent="100%"
                />

        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/controlsLayout"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_below="@id/coverLayout"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            >

            <RelativeLayout
                android:id="@+id/fxContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_stop"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@color/primary_text"
                    android:tintMode="src_in"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:paddingEnd="0dp"
                    app:paddingStart="0dp"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_prev"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:tint="@color/primary_text"
                    android:tintMode="src_in"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:paddingEnd="0dp"
                    app:paddingStart="0dp"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="3dp"
                    android:src="@mipmap/ic_launcher"
                    android:tint="@color/primary_text"
                    android:tintMode="src_in"
                    app:borderWidth="0dp"
                    app:fabSize="normal"
                    app:paddingEnd="0dp"
                    app:paddingStart="0dp"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_next"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:src="@android:drawable/ic_media_next"
                    android:tint="@color/primary_text"
                    android:tintMode="src_in"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:paddingEnd="0dp"
                    app:paddingStart="0dp"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_random"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:src="@android:drawable/ic_media_ff"
                    android:tint="@color/primary_text"
                    android:tintMode="src_in"
                    app:borderWidth="0dp"
                    app:fabSize="mini"
                    app:paddingEnd="0dp"
                    app:paddingStart="0dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/controlsLayout"
            android:background="@drawable/gradient_bottom_up"
            android:clipChildren="false"
            android:clipToPadding="false"
            >

            <FrameLayout
                android:id="@+id/lyrics_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
