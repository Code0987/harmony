<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_margin="3dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:padding="0dp"
    app:cardBackgroundColor="@color/translucent"
    app:cardElevation="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lomo_inverse"
            android:transitionName="action_image"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lomo"
            android:padding="5dp"
            >

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="13sp"
                tools:text="Test"
                />

            <TextView
                android:id="@+id/album"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:textSize="11sp"
                android:textStyle="italic"
                tools:text="Album"
                />

            <TextView
                android:id="@+id/artist"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/album"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                tools:text="Artist"
                />

        </RelativeLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadingView"
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicatorColor="@color/primary_light"
            app:indicatorName="LineScalePulseOutRapidIndicator"
            tools:visibility="visible"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
