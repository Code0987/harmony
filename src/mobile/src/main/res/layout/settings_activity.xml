<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="0dp"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.Settings"
    app:elevation="0dp"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_marginStart="-32dp"
            android:layout_marginTop="-96dp"
            android:alpha="0.7"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Settings"
            />

        <ImageButton
            android:id="@+id/close"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:clickable="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dialog_close_dark"
            android:tint="@color/icons"
            android:tintMode="src_atop"
            />

        <ImageButton
            android:id="@+id/premium"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@id/close"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="48dp"
            android:background="@null"
            android:clickable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_shop_black"
            android:tint="@color/icons"
            android:tintMode="src_atop"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_layout"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            xmlns:res="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            res:tabGravity="fill"
            res:tabMode="scrollable"
            />

        <view
            android:id="@+id/viewPager"
            class="com.ilusons.harmony.ref.ViewEx$StaticViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="About"
                >

                <TextView
                    android:id="@+id/about_title"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/app_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/about_website"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:autoLink="web"
                    android:text="@string/app_website"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_title"
                    />

                <TextView
                    android:id="@+id/about_version"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_website"
                    tools:text="Version"
                    />

                <TextView
                    android:id="@+id/about_copyright"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Copyright (C) ilusons 2018"
                    android:textSize="12sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_version"
                    />

                <Button
                    android:id="@+id/about_license"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="5dp"
                    android:text="Licenses"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_copyright"
                    />

                <Button
                    android:id="@+id/about_info"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Information"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_license"
                    />

                <Button
                    android:id="@+id/about_release_notes"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:text="Release notes"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/about_info"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:tag="UI"
                >

                <TextView
                    android:id="@+id/playbackUIStyle_textView"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Playback UI Style"
                    android:textStyle="italic"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <Spinner
                    android:id="@+id/playbackUIStyle_spinner"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/playbackUIStyle_textView"
                    />

                <TextView
                    android:id="@+id/avfxtype_textView"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Audio visualization type"
                    android:textStyle="italic"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/playbackUIStyle_spinner"
                    />

                <Spinner
                    android:id="@+id/avfxtype_spinner"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avfxtype_textView"
                    />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:fadeScrollbars="false"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical"
                android:tag="Library"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/library_scan_auto_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Scan automatically for updated media"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <CheckBox
                        android:id="@+id/library_scan_auto_checkBox"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_scan_auto_textView"
                        />

                    <TextView
                        android:id="@+id/library_scan_auto_interval_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Automatic scan interval (in seconds)"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_scan_auto_checkBox"
                        />

                    <EditText
                        android:id="@+id/library_scan_auto_interval_editText"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:minWidth="40dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_scan_auto_interval_textView"
                        />

                    <ImageButton
                        android:id="@+id/library_scan_auto_interval_imageButton"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_check_black"
                        android:tint="@color/icons"
                        android:tintMode="src_atop"
                        app:layout_constraintBottom_toBottomOf="@+id/library_scan_auto_interval_editText"
                        app:layout_constraintLeft_toRightOf="@id/library_scan_auto_interval_editText"
                        app:layout_constraintTop_toBottomOf="@id/library_scan_auto_interval_textView"
                        />

                    <TextView
                        android:id="@+id/scan_locations_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Scan locations"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_scan_auto_interval_editText"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/scan_locations_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="false"
                        android:animationCache="true"
                        android:clipToPadding="false"
                        android:maxHeight="80dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_locations_textView"
                        tools:layout_height="40dp"
                        />

                    <ImageButton
                        android:id="@+id/scan_locations_imageButton"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_playlist_add_black"
                        android:tint="@android:color/holo_green_light"
                        android:tintMode="src_atop"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_locations_recyclerView"
                        />

                    <TextView
                        android:id="@+id/scan_mediastore_enabled_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Include Android media store in library"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_locations_imageButton"
                        />

                    <CheckBox
                        android:id="@+id/scan_mediastore_enabled_checkBox"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_mediastore_enabled_textView"
                        />

                    <TextView
                        android:id="@+id/scan_constraint_min_max_duration_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Min/max length of media to include (seconds)"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_mediastore_enabled_checkBox"
                        />

                    <com.appyvet.materialrangebar.RangeBar
                        android:id="@+id/scan_constraint_min_max_duration_rangeBar"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:minWidth="80dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_constraint_min_max_duration_textView"
                        app:mrb_connectingLineColor="@color/accent"
                        app:mrb_pinColor="@color/primary_dark"
                        app:mrb_pinMaxFont="11sp"
                        app:mrb_pinPadding="5dp"
                        app:mrb_pinRadius="24dp"
                        app:mrb_pinTextColor="@color/textColorPrimary"
                        app:mrb_rangeBar="true"
                        app:mrb_rangeBarColor="@color/accent"
                        app:mrb_selectorBoundaryColor="@color/accent"
                        app:mrb_selectorBoundarySize="2dp"
                        app:mrb_selectorColor="@color/accent"
                        app:mrb_selectorSize="10dp"
                        app:mrb_temporaryPins="true"
                        app:mrb_tickColor="@color/accent"
                        app:mrb_tickEnd="2400"
                        app:mrb_tickInterval="30"
                        app:mrb_tickStart="0"
                        />

                    <TextView
                        android:id="@+id/library_update_fastMode_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Library update fast mode"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scan_constraint_min_max_duration_rangeBar"
                        />

                    <CheckBox
                        android:id="@+id/library_update_fastMode_checkBox"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_update_fastMode_textView"
                        />

                    <TextView
                        android:id="@+id/library_update_fastMode_info_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:lines="3"
                        android:text="Fast mode will ignore reading tags from file itself, and only use system provided data"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/library_update_fastMode_checkBox"
                        />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:fadeScrollbars="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:tag="Headset"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/headset_auto_play_on_plug_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Headset auto play on plug"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <CheckBox
                        android:id="@+id/headset_auto_play_on_plug_checkBox"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/headset_auto_play_on_plug_textView"
                        />

                    <TextView
                        android:id="@+id/headset_auto_play_on_plug_info_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:lines="3"
                        android:text="Last played music will start playing automatically when a headset is plugged in."
                        android:textSize="11sp"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/headset_auto_play_on_plug_checkBox"
                        />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:fadeScrollbars="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:tag="Core"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/reset_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Reset everything"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageButton
                        android:id="@+id/reset_imageButton"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_dialog_close_light"
                        android:tint="@android:color/holo_red_light"
                        android:tintMode="src_atop"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reset_textView"
                        />

                    <TextView
                        android:id="@+id/player_type_textView"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:text="Player type"
                        android:textStyle="italic"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reset_imageButton"
                        />

                    <RadioGroup
                        android:id="@+id/player_type_radioGroup"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/player_type_textView"
                        />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:fadeScrollbars="false"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical"
                android:tag="Analytics: last.fm ®"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/analytics_lfm_status"
                        xmlns:res="http://schemas.android.com/apk/res-auto"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_error_outline_black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/analytics_lfm_username"
                        xmlns:res="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_status"
                        res:hintTextAppearance="@style/AppTheme.Text"
                        >

                        <EditText
                            android:id="@+id/analytics_lfm_username_editText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Username"
                            android:inputType="text"
                            android:singleLine="true"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/analytics_lfm_password"
                        xmlns:res="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_username"
                        res:hintTextAppearance="@style/AppTheme.Text"
                        >

                        <EditText
                            android:id="@+id/analytics_lfm_password_editText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:singleLine="true"/>

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/analytics_lfm_save"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:text="Save and Apply"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_password"
                        />

                    <TextView
                        android:id="@+id/analytics_lfm_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Enter your username and password to enable scrobbler. You can verify results at their website, after sometime of playing music."
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_save"
                        />

                    <TextView
                        android:id="@+id/analytics_lfm_info1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="NOTE: Currently, caching is not supported, we're working on it. It means, you'll need constant internet or at least app opened always."
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_info"
                        />

                    <TextView
                        android:id="@+id/analytics_lfm_logs_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="32dp"
                        android:text="Logs (this session only)"
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_info1"
                        />

                    <TextView
                        android:id="@+id/analytics_lfm_logs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:overScrollMode="always"
                        android:scrollHorizontally="true"
                        android:scrollbarFadeDuration="0"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="true"
                        android:textSize="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_lfm_logs_info"
                        />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:descendantFocusability="beforeDescendants"
                android:fadeScrollbars="false"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbars="vertical"
                android:tag="Data collection"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/analytics_dc_status"
                        xmlns:res="http://schemas.android.com/apk/res-auto"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_error_outline_black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/analytics_dc_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Data collection, for smart functions. Press icon above to toggle state."
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_dc_status"
                        />

                    <TextView
                        android:id="@+id/analytics_dc_info1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="We'll collect your now playing music data (title, artist, time), nothing else."
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_dc_info"
                        />

                    <TextView
                        android:id="@+id/analytics_dc_info2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Collected data will used to create various things like - smart playlists, song recommendation, and more ..."
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_dc_info1"
                        />

                    <TextView
                        android:id="@+id/analytics_dc_info3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="[WORK IN PROGRESS]"
                        android:textColorHint="@color/secondary_text"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/analytics_dc_info2"
                        />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>

        </view>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:visibility="visible"
        app:indicatorColor="@color/accent"
        app:indicatorName="BallScaleMultipleIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
