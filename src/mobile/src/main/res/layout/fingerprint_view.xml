<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false"
        android:animationCache="true"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:fadeScrollbars="true"
        android:nestedScrollingEnabled="true"
        android:scrollbars="none"
        res:layout_constraintBottom_toBottomOf="parent"
        res:layout_constraintLeft_toLeftOf="parent"
        res:layout_constraintRight_toRightOf="parent"
        res:layout_constraintTop_toTopOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            >

            <ImageButton
                android:id="@+id/icon"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="32dp"
                android:background="@null"
                android:clickable="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mic_black"
                android:tint="@android:color/holo_purple"
                android:tintMode="src_atop"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="Tap above icon"
                android:textColor="@color/secondary_text"
                android:textSize="26sp"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/icon"
                tools:text="Text ..."
                />

            <FrameLayout
                android:id="@+id/avfx_layout"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_margin="16dp"
                android:background="@drawable/lomo"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/text"
                />

            <RelativeLayout
                android:id="@+id/lookup_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_margin="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/text"
                >

                <ImageView
                    android:id="@+id/lookup_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    android:transitionName="action_image"
                    android:translationZ="0dp"
                    tools:src="@drawable/logo"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp"
                    android:translationZ="30dp"
                    >

                    <TextView
                        android:id="@+id/lookup_text"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/primary_text"
                        android:textSize="9sp"
                        tools:text="Text ..."
                        />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/avfx_layout"
                tools:text="Text ..."
                />

            <ImageButton
                android:id="@+id/local_updater_status"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_error_outline_black"
                android:tint="@android:color/holo_red_light"
                android:tintMode="src_atop"
                res:layout_constraintLeft_toLeftOf="parent"
                res:layout_constraintRight_toRightOf="parent"
                res:layout_constraintTop_toBottomOf="@id/info"
                />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
